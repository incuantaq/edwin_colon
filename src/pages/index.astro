---
import Reward from '@components/Reward.astro';
import Allies from '../components/Allies.astro';
import About from '../components/about.astro';
import Products from '../components/products.astro';
import Layout from '../layouts/Layout.astro';
import Testimonials from '@/components/Testimonials.astro';
import PopUp from '@/components/PopUp.astro';

const title = "Edwin | Windmar";
const description = "Soluciones de energía solar para hogares: paneles solares de alta eficiencia, baterías de almacenamiento y servicios profesionales de reparación de techos. Ahorra energía y mejora tu hogar con nuestros expertos.";
const metaImg = '/logo.svg'

const images = {
  desktop: '/images/offers/banner_desktop.webp',
  mobile: '/images/offers/banner_mobile.webp',
}
const heroCta = {
  label: 'Comprar ya',
  url: 'https://wa.link/qu92ul',
  display: true,
}


---

<Layout title={title} description={description} hasHero={true} image={metaImg} heroImages={images} hasHeroCta={heroCta.display} heroCtaLabel={heroCta.label} heroCtaUrl={heroCta.url}>
  <Allies />
  <About />
  <Products />
  <Testimonials />
  <PopUp />
</Layout>
