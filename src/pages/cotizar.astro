---
import PopUp from '@/components/PopUp.astro';
import SalesForm from '../components/SalesForm.astro';
import Layout from '../layouts/Layout.astro';

const title = "Edwin Colon | Empleos";
const description = "Cotiza tus paneles solares, baterías de hogar y servicios de Roofing. Herramienta fácil de usar para presupuestos personalizados. Descubre cuánto puedes ahorrar con energía solar.";
const metaImg = '/logo.svg'

---

<Layout title={title} description={description} hasHero={false} image={metaImg}>
  <SalesForm />
  <PopUp />
</Layout>

<style is:global>
  .product-picker {
    cursor: pointer;
    font-weight: bold;
    text-align: center;
    width: 30%;
  }
  .product-picker.selected {
    --primary: #1538a9;
    border-color: var(--primary);
    border-width: 2px;
    color: var(--primary);
  }

  #crmWebToEntityForm {
    position: fixed;
    top: 0;
    left: 0;
    z-index: -1000;
    width: 0;
    height: 0;
    overflow: hidden;
  }

  .pricer-wrapper{
    min-height: calc(100% - 300px);
  }
</style>