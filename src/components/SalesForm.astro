---
import MultiStepForm from "@/components/MultiStepForm";
import PricingAnimation from "@/components/pricingAnimation";
---

<div class="min-h-[85vh] flex items-center relative">
  <img src="/images/cotizar_banner.webp" alt="cotizar background" class="absolute left-0 top-0 w-full h-full object-cover brightness-[0.4] -z-10" />
  <div class="container mx-auto flex justify-center items-center py-10 flex-col md:flex-row">
    <div class="w-full md:w-1/2 shrink-0">
      <PricingAnimation client:load/>
    </div>
    <MultiStepForm client:load />
  </div>
</div>